<form class="comment-form top-comment-form" role="form" action="/comments/new" method="POST">
    <div class="form-group">
        <label for="content">Comment</label>
        <textarea class="form-control" name="content" id="content" data-provide="markdown" rows="10"></textarea>
    </div>
    <input type="hidden" name="post" value="{{.Comment.Post}}" />
    <input type="hidden" name="parent" value="{{.Comment.Id}}" />

    <button type="submit" class="btn btn-default">Submit</button>
</form>
